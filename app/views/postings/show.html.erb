<table>
  <tr>
    <td><%= image_tag @posting.image.url(:large) %></td>
    <td>
      <p>
        <strong>Title:</strong>
        <%= @posting.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @posting.description %>
      </p>

      <p>
        <strong>Price per Month:</strong>
        $<%= @posting.cost %>
      </p>

      <p>
        <strong>Housing Type:</strong>
        <%= @posting.housing_type %>
      </p>

      <p>
        <strong>Number of Rooms:</strong>
        <%= @posting.bedroom_num %>
      </p>

      <p>
        <strong>Contact:</strong>
        <%= User.find(@posting.user_id).email%>
        <br>
        <%= link_to User.find(@posting.user_id).name, user_path(User.find(@posting.user_id)) %>
      </p>
    </td>
  </tr>
</table>

<%= link_to 'Edit', edit_posting_path(@posting) %> |
<%= link_to 'Back', postings_path %>
